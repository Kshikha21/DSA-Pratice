package com.pratice;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

public class PraticeArrayList {
	public static List CheckFornum(List<Integer> nums) {
		Iterator itr=nums.iterator();
		while(itr.hasNext()) {
			if(nums.contains(8)) {
				itr.remove();
				
			}
		}
		
		
		return nums;
	}
	
	
	public static List  checkIfstartswithA(List <String> listString) {
		Iterator itr=listString.iterator();
		while(itr.hasNext()) {
			if(!listString.contains("a")) {
				itr.remove();
				
			}
		}
		
//		for(String a:listString) {
//			if(!listString.contains("a")) {
//				listString.remove(a);
//			}
//		}
//		
		
		
		return listString;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		List<String> list=new ArrayList<String>();
		list.add("apple");
		list.add("antique");
		list.add("zepti");
		list.add("animal");
		list.add("hello");
		list.add("etc");
		//	System.out.println(checkIfstartswithA(list));
		
		List<Integer> listof=new ArrayList<Integer>();
		listof.add(2);
		listof.add(8);
		listof.add(9);
		listof.add(3);
		listof.add(1);
		
		System.out.println(CheckFornum(listof));

	}

}
